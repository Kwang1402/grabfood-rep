<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center">

    <GridLayout
        android:id="@+id/grid_view_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_gravity="center"
        android:padding="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="185dp"
            android:layout_height="90dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="20dp"
            android:elevation="6dp"
            app:cardBackgroundColor="@color/light_blue"
           >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:paddingStart="16dp">

                    <!-- Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/meal_under_40k"
                        android:textStyle="bold"
                        android:fontFamily="@font/helvetica_bold"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />

                    <!-- Subtitle -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/save_every_day"
                        android:textSize="14sp"
                        android:fontFamily="@font/helvetica"
                        android:layout_marginTop="4dp" />
                    <ImageView
                        android:paddingTop="3dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/arrow_button"
                        />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="185dp"
            android:layout_height="90dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="20dp"
            android:elevation="6dp"
            app:cardBackgroundColor="@color/pink"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:paddingStart="16dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/qu_n_ngon_b"
                        android:fontFamily="@font/helvetica_bold"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />

                    <!-- Subtitle -->
                    <TextView
                        android:fontFamily="@font/helvetica"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ngon_ph_i_th"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                    <ImageView
                        android:paddingTop="3dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/arrow_button"
                        />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="185dp"
            android:layout_height="90dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="20dp"
            android:elevation="6dp"
            app:cardBackgroundColor="@color/light_green"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:paddingStart="16dp">

                    <!-- Title -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/si_u_ti_c_99k"
                        android:fontFamily="@font/helvetica_bold"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />

                    <!-- Subtitle -->
                    <TextView
                        android:fontFamily="@font/helvetica"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/deal_to_ti_c_to"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />
                    <ImageView
                        android:paddingTop="3dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/arrow_button"
                        />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="185dp"
            android:layout_height="90dp"
            android:layout_margin="8dp"
            app:cardCornerRadius="20dp"
            android:elevation="6dp"
            app:cardBackgroundColor="@color/light_orange"

            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:paddingStart="16dp">

                    <!-- Title -->
                    <TextView
                        android:id="@+id/meal_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/khao_ti_c_t_u_tr"
                        android:textStyle="bold"
                        android:fontFamily="@font/helvetica_bold"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/back_to_school"
                        android:textSize="14sp"
                        android:fontFamily="@font/helvetica"
                        android:layout_marginTop="4dp" />
                    <ImageView
                        android:paddingTop="3dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/arrow_button"
                        />
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>

</LinearLayout>
